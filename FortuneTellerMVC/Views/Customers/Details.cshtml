@model FortuneTellerMVC.Models.Customer

@{
    ViewBag.Title = "Customer Details";
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            Name:
        </dt>

        <dd>
            <span>@Html.DisplayFor(model => model.FirstName)</span> <span>@Html.DisplayFor(model => model.LastName)</span>
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>*@

        <dt>
            Retirement age:
        </dt>

        <dd>
            You will retire in <span>@ViewBag.retirementAge</span> years.
        </dd>

        <dt>
            Money in the bank:
        </dt>

        <dd>
            You will have $<span>@ViewBag.moneyInTheBank</span> in the bank.
        </dd>

        <dt>
            Mode of transportation:
        </dt>

        <dd>
            @ViewBag.transportation
        </dd>

        <dt>
            Vacation home:
        </dt>

        <dd>
            You will have a vacation home in <span>@ViewBag.vacationHome</span>.
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
